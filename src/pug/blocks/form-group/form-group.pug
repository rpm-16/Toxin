mixin form-group(args)
  - let objArgs = args
    
    .form-group(class=objArgs.accordion? "accordion": "")
      label.form-group__wrapper
        .form-group__title= objArgs.title
        if objArgs.note
          .form-group__note= objArgs.note
      
      .form-group__body(class=objArgs.inline? "expanded": "")
        block