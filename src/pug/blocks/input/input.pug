//- input field universal mixin, i hope. 

mixin input(args)
    //- - var {mclass, name, type, placeholder, id} = options
    - let objArgs = args
    
        .input-group
            input.input-group__input(
                class= objArgs.mclass,
                placeholder= objArgs.placeholder,
                name= objArgs.name,
                type= objArgs.type,
                id= objArgs.id
            )          
