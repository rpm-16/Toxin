include ../input/input


mixin input-dropdown(options)
    - 
      var {label, note, mClass,name, type, placeholder, items, showButtons, id} = options;
    
      
    +input(options)(value= countString || "Сколько гостей", id= id)
    #dropdown
      ul.input-dropdown_item-list
        for item in items
          li.input-dropdown__item= item.title
            .input-dropdown_controls
               button(onclick = "plusCount()") -
               span= item.count
                .c {'$data-index'}
               button(type="button" data-action="desc" disabled= item.count === 0) +
      .buttons 
      button(onClick="clearCount()") clear
      button(onclick="submitCount()") submit

           
